<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>${project.build.directory}/API-Automation-0.0.1-SNAPSHOT-jar.jar</source>
      <outputDirectory>/lib</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/Controller.xlsx</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/bin/run-test.bat</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/bin/open-report.bat</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/allure.properties</source>
      <outputDirectory>/resources/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/environment.properties</source>
      <outputDirectory>/resources/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/categories.json</source>
      <outputDirectory>/resources/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/test/resources/hibernate.cfg.xml</source>
      <outputDirectory>/resources/</outputDirectory>
    </file>
    <file>
      <source>${settings.localRepository}/org/aspectj/aspectjweaver/1.8.10/aspectjweaver-1.8.10.jar</source>
      <outputDirectory>/lib/</outputDirectory>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/test/resources/schema</directory>
      <outputDirectory>/resources/schema/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/files</directory>
      <outputDirectory>/resources/files</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>